{
	"name": "${localWorkspaceFolderBasename}",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": "Rscript -e 'cmdstanr::install_cmdstan(cores = 2)' && Rscript -e 'tinytex::install_tinytex()' && Rscript -e 'tinytex::tlmgr_install(\"haranoaji\")'",
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"TianyiShi.rmarkdown",
				"yzhang.markdown-all-in-one",
				"mechatroner.rainbow-csv",
				"GrapeCity.gc-excelviewer",
				"REditorSupport.r",
				"REditorSupport.r-syntax",
				"Tailscale.vscode-tailscale"
			]
		}
	}
}
